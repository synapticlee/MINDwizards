
function export_sims(mat_filename, output_name)
%% Export simulated data to CSV

load(mat_filename);


for subject = 1:length(sub)
    sub_data = sub(subject);
    for trial = 1:sub_data.nTrials
        csv_data(trial, 1) = subject;
        csv_data(trial, 2) = trial;
        csv_data(trial, 3) = sub_data.response(trial);
        csv_data(trial, 4:8) = sub_data.bars(trial);
        csv_data(trial, 9) = sub_data.correct_response(trial);
        csv_data(trial, 10) = sub_data.alpha;
        csv_data(trial, 11) = sub_data.sigma; 
    end


end 

csvwrite(output_name, csv_data);


end










